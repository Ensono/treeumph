{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib",
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
